<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_section"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Headline Untuk Tiap Menu -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Hiragana"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <!-- Status Unlock Dan Unlocked Tiap Menu -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlocked"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

</LinearLayout>

<!-- File Untuk Menampilkan Isi Dari Menu Utama Yang Dipilih -->